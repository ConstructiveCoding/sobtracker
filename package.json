{
  "name": "sobtracker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "build-android-release": "cd android && ./gradlew clean && ./gradlew assembleRelease",
    "clean-android-run": "cd android && ./gradlew clean && cd .. && react-native run-android",
    "fabric-beta-android-release": "cd android && ./gradlew clean && ./gradlew assembleRelease crashlyticsUploadDistributionRelease",
    "test": "jest",
    "coverage": "jest --no-cache --coverage",
    "detox:ios": "concurrently --kill-others \"npm run storybook\" \"npm run detox-tests:ios\"  ",
    "detox:android": "concurrently --kill-others \"npm run storybook\" \"npm run detox-tests:android\"  ",
    "detox-tests:ios": "detox build --configuration ios.sim.debug && detox test --configuration ios.sim.debug",
    "detox-tests:android": "detox build --configuration android.emu.debug && detox test --configuration android.emu.debug",
    "storybook": "storybook start -p 7007",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "precommit:tests": "jest --no-cache --coverage",
    "precommit:msg": "echo 'Pre-commit checks...' && exit 0",
    "precommit:prettier": "lint-staged",
    "prettier": "prettier --write \"{src,{__tests__}}/**/*.js\""
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "git add"
    ]
  },
  "pre-commit": [
    "precommit:msg",
    "precommit:prettier",
    "precommit:tests"
  ],
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/sobtracker.app",
        "build": "xcodebuild -project ios/sobtracker.xcodeproj -scheme sobtracker -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/app-production-debug.apk",
        "build": "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_25"
      }
    }
  },
  "dependencies": {
    "@types/react-native-vector-icons": "^4.6.1",
    "@types/react-navigation": "^1.5.11",
    "react": "16.3.1",
    "react-native": "0.55.4",
    "react-native-device-log": "^1.0.2",
    "react-native-localization": "^1.0.9",
    "react-native-vector-icons": "^4.6.0",
    "react-navigation": "^2.0.4",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-persist": "^5.10.0",
    "seamless-immutable": "^7.1.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.0-alpha.8",
    "@storybook/addon-links": "^4.0.0-alpha.8",
    "@storybook/addons": "^4.0.0-alpha.8",
    "@storybook/react-native": "^4.0.0-alpha.8",
    "@types/babel-core": "^6.25.3",
    "@types/detox": "^7.3.0",
    "@types/mocha": "^5.2.0",
    "@types/prettier": "^1.12.4",
    "@types/prop-types": "^15.5.3",
    "@types/react-dom": "^16.0.5",
    "@types/redux-mock-store": "0.0.13",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "23.0.0",
    "babel-preset-react-native": "4.0.0",
    "babel-runtime": "^7.0.0-beta.3",
    "concurrently": "^3.5.1",
    "detox": "^7.3.7",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.65.0",
    "husky": "^0.14.3",
    "jest": "23.0.0",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "react-dom": "16.3.1",
    "react-test-renderer": "16.3.1",
    "redux-mock-store": "^1.5.1"
  },
  "jest": {
    "verbose": true,
    "preset": "react-native",
    "coveragePathIgnorePatterns": [
      "/e2e",
      "./__tests__/testSetup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/output/",
      "/sentry_build/",
      "/e2e",
      "./__tests__/testSetup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-native-confidence|react-clone-referenced-element)"
    ],
    "setupFiles": [
      "./__tests__/testSetup.js"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "!**/coverage/**",
      "!**/language/**",
      "!**/node_modules/**",
      "!**/output/**",
      "!**/sentry_build/**",
      "!**/storybook/**",
      "!**/theme/**",
      "!flow-typed/**",
      "!testSetup.js",
      "**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageDirectory": "output/coverage"
  },
  "prettier": {
    "useTabs": false,
    "trailingComma": "es5",
    "parser": "flow",
    "semi": true,
    "jsxBracketSameLine": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "printWidth": 1024
        }
      }
    ]
  }
}
